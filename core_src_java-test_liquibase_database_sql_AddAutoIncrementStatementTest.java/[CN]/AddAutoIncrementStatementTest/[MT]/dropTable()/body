{
  for (  Database database : TestContext.getInstance().getAvailableDatabases()) {
    dropAndCreateTable(new CreateTableStatement(TABLE_NAME).addPrimaryKeyColumn(COLUMN_NAME,COLUMN_TYPE).addColumn("otherColumn","varchar(50)"),database);
    if (database.supportsSchemas()) {
      dropAndCreateTable(new CreateTableStatement(TestContext.ALT_SCHEMA,TABLE_NAME).addPrimaryKeyColumn(COLUMN_NAME,COLUMN_TYPE).addColumn("otherColumn","varchar(50)"),database);
    }
  }
}
