{
  new DatabaseTestTemplate().testOnAvailableDatabases(new SqlStatementDatabaseTest(TestContext.ALT_SCHEMA,new DropColumnStatement(TestContext.ALT_SCHEMA,TABLE_NAME,COLUMN_NAME)){
    protected void preExecuteAssert(    DatabaseSnapshot snapshot){
      assertNotNull(snapshot.getTable(TABLE_NAME).getColumn(COLUMN_NAME));
    }
    protected void postExecuteAssert(    DatabaseSnapshot snapshot){
      assertNull(snapshot.getTable(TABLE_NAME).getColumn(COLUMN_NAME));
    }
  }
);
}
