{
  final String sqlNoContraintNameTemplate="ALTER TABLE %s ADD CONSTRAINT UNIQUE (%s)";
  final String sqlTemplate="ALTER TABLE %s ADD CONSTRAINT UNIQUE (%s) CONSTRAint %s";
  if (statement.getConstraintName() == null) {
    return new Sql[]{new UnparsedSql(String.format(sqlNoContraintNameTemplate,database.escapeTableName(statement.getSchemaName(),statement.getTableName()),database.escapeColumnNameList(statement.getColumnNames())))};
  }
 else {
    return new Sql[]{new UnparsedSql(String.format(sqlTemplate,database.escapeTableName(statement.getSchemaName(),statement.getTableName()),database.escapeColumnNameList(statement.getColumnNames()),database.escapeConstraintName(statement.getConstraintName())))};
  }
}
