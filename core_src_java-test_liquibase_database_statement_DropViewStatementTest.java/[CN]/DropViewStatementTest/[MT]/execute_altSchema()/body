{
  new DatabaseTestTemplate().testOnAvailableDatabases(new SqlStatementDatabaseTest(TestContext.ALT_SCHEMA,new DropViewStatement(TestContext.ALT_SCHEMA,VIEW_NAME)){
    protected void preExecuteAssert(    DatabaseSnapshot snapshot){
      assertNotNull(snapshot.getView(VIEW_NAME));
    }
    protected void postExecuteAssert(    DatabaseSnapshot snapshot){
      assertNull(snapshot.getView(VIEW_NAME));
    }
  }
);
