{
  new DatabaseTestTemplate().testOnAvailableDatabases(new SqlStatementDatabaseTest(TestContext.ALT_SCHEMA,new CreateTableStatement(TestContext.ALT_SCHEMA,TABLE_NAME).addPrimaryKeyColumn("id","int").addColumn("name","varchar(255)").addColumn("username","varchar(255)","'NEWUSER'")){
    protected void preExecuteAssert(    DatabaseSnapshot snapshot){
      assertNull(snapshot.getTable(TABLE_NAME));
    }
    protected void postExecuteAssert(    DatabaseSnapshot snapshot){
      Table table=snapshot.getTable(TABLE_NAME);
      assertNotNull(table);
      assertEquals(TABLE_NAME.toUpperCase(),table.getName().toUpperCase());
    }
  }
);
}
