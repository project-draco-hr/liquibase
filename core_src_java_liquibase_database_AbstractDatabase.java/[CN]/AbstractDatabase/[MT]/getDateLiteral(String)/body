{
  if (isDateOnly(isoDate) || isTimeOnly(isoDate)) {
    return "'" + isoDate + "'";
  }
 else   if (isDateTime(isoDate)) {
    StringBuffer val=new StringBuffer();
    val.append("'");
    val.append(isoDate.substring(0,10));
    val.append(" ");
    val.append(isoDate.substring(11));
    val.append("'");
    return val.toString();
  }
 else {
    return "BAD_DATE_FORMAT:" + isoDate;
  }
}
