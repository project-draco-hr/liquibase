{
  System.out.println("Viewing user and auctions: " + sellerId);
  Session s=factory.openSession();
  Transaction tx=null;
  try {
    tx=s.beginTransaction();
    List list=s.createCriteria(User.class).add(Expression.eq("id",sellerId)).setFetchMode("auctions",FetchMode.JOIN).list();
    if (list.size() == 0)     throw new IllegalArgumentException("No user for the given id: " + sellerId);
    User user=(User)list.get(0);
    System.out.println("User: " + user.getId() + " - "+ user.getName()+ ", email: "+ user.getEmail()+ ", auctions: "+ user.getAuctions());
    tx.commit();
  }
 catch (  Exception e) {
    if (tx != null)     tx.rollback();
    throw e;
  }
 finally {
    s.close();
  }
}
