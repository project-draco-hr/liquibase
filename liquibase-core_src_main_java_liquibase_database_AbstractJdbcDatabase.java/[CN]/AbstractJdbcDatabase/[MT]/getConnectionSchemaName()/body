{
  if (connection == null) {
    return null;
  }
  try {
    ResultSet resultSet=((JdbcConnection)connection).prepareCall("call current_schema").executeQuery();
    resultSet.next();
    return resultSet.getString(1);
  }
 catch (  Exception e) {
    LogFactory.getLogger().info("Error getting default schema",e);
  }
  return null;
}
