{
  Object defaultValue=statement.getDefaultValue();
  return new Sql[]{new UnparsedSql("ALTER TABLE " + database.escapeTableName(statement.getCatalogName(),statement.getSchemaName(),statement.getTableName()) + " ADD CONSTRAINT "+ ((MSSQLDatabase)database).generateDefaultConstraintName(statement.getTableName(),statement.getColumnName())+ " DEFAULT "+ DataTypeFactory.getInstance().fromObject(defaultValue,database).objectToString(defaultValue,database)+ " FOR "+ statement.getColumnName(),new Column().setRelation(new Table(statement.getTableName()).setSchema(new Schema(statement.getCatalogName(),statement.getSchemaName()))).setName(statement.getColumnName()))};
}
