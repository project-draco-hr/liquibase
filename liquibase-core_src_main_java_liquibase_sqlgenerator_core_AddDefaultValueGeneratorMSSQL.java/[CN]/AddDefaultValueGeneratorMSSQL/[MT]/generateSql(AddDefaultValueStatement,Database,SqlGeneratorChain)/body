{
  Object defaultValue=statement.getDefaultValue();
  return new Sql[]{new UnparsedSql("ALTER TABLE " + database.escapeTableName(statement.getCatalogName(),statement.getSchemaName(),statement.getTableName()) + " ADD CONSTRAINT "+ ((MSSQLDatabase)database).generateDefaultConstraintName(statement.getTableName(),statement.getColumnName())+ " DEFAULT "+ DataTypeFactory.getInstance().fromObject(defaultValue,database).objectToSql(defaultValue,database)+ " FOR "+ statement.getColumnName(),getAffectedColumn(statement))};
}
