{
  new DatabaseTestTemplate().testOnAvailableDatabases(new SqlStatementDatabaseTest(null,new CreateIndexStatement(INDEX_NAME,null,TABLE_NAME,COLUMN_NAME).setTablespace(TestContext.ALT_TABLESPACE)){
    protected void preExecuteAssert(    DatabaseSnapshot snapshot){
      assertNull(snapshot.getIndex(INDEX_NAME));
    }
    protected void postExecuteAssert(    DatabaseSnapshot snapshot){
      assertNotNull(snapshot.getIndex(INDEX_NAME));
      assertEquals(COLUMN_NAME.toUpperCase(),snapshot.getIndex(INDEX_NAME).getColumnNames().toUpperCase());
    }
  }
);
}
