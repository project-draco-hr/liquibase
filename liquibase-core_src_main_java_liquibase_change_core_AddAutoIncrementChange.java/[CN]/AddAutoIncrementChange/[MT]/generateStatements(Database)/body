{
  if (database instanceof PostgresDatabase) {
    String sequenceName=(getTableName() + "_" + getColumnName()+ "_seq").toLowerCase();
    return new SqlStatement[]{new CreateSequenceStatement(schemaName,sequenceName),new SetNullableStatement(schemaName,getTableName(),getColumnName(),null,false),new AddDefaultValueStatement(schemaName,getTableName(),getColumnName(),getColumnDataType(),new DatabaseFunction("NEXTVAL('" + sequenceName + "')"))};
  }
  return new SqlStatement[]{new AddAutoIncrementStatement(getSchemaName(),getTableName(),getColumnName(),getColumnDataType(),getStartWith(),getIncrementBy())};
}
