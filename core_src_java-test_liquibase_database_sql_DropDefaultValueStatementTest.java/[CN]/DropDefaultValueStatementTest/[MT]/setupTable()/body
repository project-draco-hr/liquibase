{
  for (  Database database : TestContext.getInstance().getAvailableDatabases()) {
    dropAndCreateTable(new CreateTableStatement(TABLE_NAME).addPrimaryKeyColumn("id","int").addColumn(COLUMN_NAME,"varchar(50)","'Def Value'"),database);
    if (database.supportsSchemas()) {
      dropAndCreateTable(new CreateTableStatement(TestContext.ALT_SCHEMA,TABLE_NAME).addPrimaryKeyColumn("id","int").addColumn(COLUMN_NAME,"varchar(50)","'Def Value'"),database);
    }
  }
}
