{
  StringBuffer buffer=new StringBuffer();
  buffer.append("DROP TABLE ").append(database.escapeTableName(statement.getSchemaName(),statement.getTableName()));
  if (statement.isCascadeConstraints()) {
    if (database instanceof DerbyDatabase || database instanceof DB2Database || database instanceof MSSQLDatabase|| database instanceof FirebirdDatabase|| database instanceof SQLiteDatabase|| database instanceof SybaseDatabase|| database instanceof SybaseASADatabase) {
      LogFactory.getLogger().warning("Database does not support drop with cascade");
    }
 else     if (database instanceof OracleDatabase) {
      buffer.append(" CASCADE CONSTRAINTS");
    }
 else {
      buffer.append(" CASCADE");
    }
  }
  return new Sql[]{new UnparsedSql(buffer.toString())};
}
